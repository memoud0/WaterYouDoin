{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "types": ["chrome", "node"]
  },
  "include": ["extension/**/*.ts", "extension/**/*.tsx", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
