{
  "manifest_version": 3,
  "name": "WaterYouDoin",
  "version": "0.1.0",
  "description": "Encourages intentional AI usage by intercepting low-value prompts.",

  "permissions": ["storage", "tabs", "scripting", "offscreen"],

  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://www.dogpile.com/*",
    "https://www.google.com/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content.js"]
    }
  ],

  "options_page": "extension/pages/options/options.html",

  "action": {
    "default_popup": "extension/pages/popup/popup.html"
  },

  "icons": {
    "16": "extension/assets/icons/logo.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["extension/assets/mascot/*.png", "extension/assets/mascot/*.PNG"],
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"]
    }
  ]
}
